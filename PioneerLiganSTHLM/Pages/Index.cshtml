@page
@model IndexModel
@{
    ViewData["Title"] = "Pioneer Ligan STHLM";

    var leagueName = Model.LeagueModel.Name;
    int eventCount = Model.Events.Count;
    var events = Model.Events;
    var playerVMs = Model.PlayersVMs.OrderByDescending(p => p.Points);
    var eventVMs = Model.LeagueEventVMs.OrderBy(d => d.Date);
    int count = 1;
}

<div class="row">
    <div class="col-12 text-center" id="logo-pio">PIONEER</div>
    <div class="col-12 text-center" id="logo-league">LIGAN</div>
    <div class="col-12 text-center" id="logo-sthlm">STHLM</div>
    <div class="col-12 text-center"><i>i samarbete med</i></div>
    <div class="col-12 text-center"><a href="dragonslair.se"><img src="~/img/dl-logo.svg" width="350px" class="pb-3" /></a></div>
</div>
<div class="row">
    <div class="col-12 main-event-table">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th id="table-pos" scope="col">#</th>
                    <th scope="col">@leagueName</th>
                    @foreach (var e in events)
                    {
                        <th class="text-end" scope="col">@e.Date.ToString("dd/MM")</th>
                    }
                    <th class="text-end" scope="col">Points</th>
                </tr>
            </thead>
            <tbody>                
                @foreach (var p in playerVMs)
                {
                    @if (count < 17)
                    {
                        <tr>
                            <th class="text-success" scope="row">@count</th>
                            <th class="text-success" scope="row">@p.Name</th>
                            @foreach (var result in p.PlayerResults)
                            {
                                <td class="text-end">@result</td>
                            }
                            <td class="text-end">@p.Points</td>
                        </tr>
                    }
                    else 
                    {
                        <tr>
                            <th class="text-danger" scope="row">@count</th>
                            <th class="text-danger" scope="row">@p.Name</th>
                            @foreach (var result in p.PlayerResults)
                            {
                                <td class="text-end">@result</td>
                            }
                            <td class="text-end">@p.Points</td>
                        </tr>
                    }                
                count++;
                }                
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    @foreach (var e in eventVMs)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 event-table">
            <span onclick="Collapser(this)" class="event-header">League event: @e.Date.ToShortDateString()</span>
            <div id="@e.cssId" class="hideElement">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th class="text-end" scope="col">Points</th>
                            <th class="text-end" scope="col">OMW%</th>
                            <th class="text-end" scope="col">GW%</th>
                            <th class="text-end" scope="col">OGW%</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var p in e.Results)
                        {
                            <tr>
                                <th scope="row">@p.PlayerName</th>
                                <td class="text-end">@p.Points</td>
                                <td class="text-end">@p.OMW</td>
                                <td class="text-end">@p.GW</td>
                                <td class="text-end">@p.OGW</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    }
</div>