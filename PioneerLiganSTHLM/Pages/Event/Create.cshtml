@page
@model PioneerLiganSTHLM.Pages.Event.CreateModel

@{
    ViewData["Title"] = "Create";

    var numberOfEvents = Model.DisplayEvents.Count + 1;
    var selectedLeague = Model.SelectedLeague;
    string leagueName = string.Empty;

    if (selectedLeague != 0) 
    {
        leagueName = Model.Leagues.Where(i => i.ID == selectedLeague).FirstOrDefault().Name;
    }
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <select id="select-league" name="league-select" asp-items="@(new SelectList(Model.Leagues,"ID","Name"))" class="form-select">
                    <option value="" selected disabled>---Select League---</option>
                </select>
            </div>
            @if (selectedLeague != 0) 
            {
                <div class="pt-2">
                    <p>
                        Selected league: @leagueName
                    </p>
                </div>
            }
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventNumber" class="control-label"></label>
                <input asp-for="Event.EventNumber" class="form-control" value="@numberOfEvents" />
                <span asp-validation-for="Event.EventNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div hidden id="selected-league">@selectedLeague</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
